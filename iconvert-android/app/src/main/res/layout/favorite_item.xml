<?xml version="1.0" encoding="utf-8"?>
<com.kimboofactory.iconvert.ui.home.views.FavoriteItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dim_4dp">

    <ImageView
        android:id="@+id/iv_delete_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_centerVertical="true"
        android:padding="@dimen/dim_4dp"/>

    <RelativeLayout
        android:id="@+id/rl_side_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dim_2dp"
        android:layout_toRightOf="@id/iv_delete_favorite">

        <ImageView
            android:id="@+id/iv_currency_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_european_union_48"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/iv_currency_logo"
            android:paddingLeft="@dimen/dim_2dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            tools:text="@string/label_code"/>

        <TextView
            android:id="@+id/tv_libelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_currency_logo"
            android:layout_alignParentLeft="true"
            android:paddingTop="@dimen/dim_12dp"
            tools:text="@string/label_libelle"/>

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="@dimen/dim_75dp"
            android:layout_height="@dimen/dim_56dp"
            android:layout_centerInParent="true"
            android:padding="@dimen/dim_12dp"
            tools:text="Rate 1.9999"/>

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dim_10dp"
            android:paddingRight="@dimen/dim_10dp"
            tools:text="2.500"/>
    </RelativeLayout>
</com.kimboofactory.iconvert.ui.home.views.FavoriteItemView>